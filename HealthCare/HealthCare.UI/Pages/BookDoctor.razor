@page "/bookDoctor/{DoctorId}"
@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.Calendars
@using Syncfusion.Blazor.Inputs
@using Syncfusion.Blazor.Navigations
@using Syncfusion.Blazor.Popups
@using HealthCare.ViewModels;

<style>
    .custom-button {
        background: none; /* Remove the background */
        border: none; /* Remove the border, if any */
        padding: 0; /* Remove padding, if any */
        cursor: pointer; /* Add cursor style if needed */
    }

</style>

<div class="col-12 navbar navbar-expand screenLabel position-fixed top-row m-0 p-0 screenLabelStyle" style="margin-top: 55px !important;">
    <div class="col-12 m-0 p-0" style="font-size: 18px; text-align: left;"><span style="float: left">Me</span></div>
</div>

<div class="container-fluid p-3 d-flex justify-content-center align-items-center">
    <div class="m-0 p-0 row">
        <div class="m-0 p-1">
            <div>
                @if (Doctor != null)
                {
                    <HealthCare.UI.Pages.Components.DoctorCards Doctor="@Doctor" IsBookNowButtonShown="false"></HealthCare.UI.Pages.Components.DoctorCards>
                }
            </div>
        </div>
        <div class="pl-2">
            <br/>
            <label>Appointment Time</label>
            <br/>
            <div class="row">
                @if(DoctorAvailibility != null)
                {
                    @foreach(var availibity in DoctorAvailibility)
                    {
                        <div class="rounded-box">
                            @(availibity.DayOfWeek.ToString() + " " + @availibity.Time.Value.ToString())
                        </div>
                    }
                }
            </div>
            <label>Date: </label>
                <SfDatePicker CssClass="mandatory" TValue="DateTime" @bind-Value = "AppointmentDate" ></SfDatePicker>
            
            <br/>
            <label>Description :</label>
                <SfTextBox TValue="string" @bind-Value="@Description" style="height: 115px;" />
        </div>
    </div>
</div>
<div class="d-flex justify-content-center align-items-center">
    <SfButton type="button" class="btn btn-danger w-25 p-1" style="font-size: 20px;" OnClick="BookAppointment">BOOK NOW</SfButton>
</div>